# Application
NODE_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB_NAME?sslmode=prefer
DATABASE_SCHEMA=public

# Secrets (replace with secure random strings)
JWT_SECRET=change-me
SESSION_SECRET=change-me

# MongoDB
MONGODB_URI=mongodb+srv://USER:PASSWORD@HOST/DB_NAME?retryWrites=true&w=majority
MONGODB_DB=chopped

# Supabase (public)
NEXT_PUBLIC_SUPABASE_URL=https://project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=ey...your_anon_key

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey_or_username
SMTP_PASS=replace-with-secret
SMTP_FROM=No Reply <noreply@example.com>

# BunnyCDN Storage
BUNNY_STORAGE_ZONE=choppedthumbs
BUNNY_ACCESS_KEY=replace-with-secret
BUNNY_STORAGE_REGION_HOST=ny.storage.bunnycdn.com
BUNNY_THUMBS_CDN=https://your-cdn.example.com
BUNNY_THUMBS_TOKEN_KEY=replace-with-secret
